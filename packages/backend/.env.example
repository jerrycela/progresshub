# ===========================================
# ProgressHub Backend 環境變數
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Database (必填)
# 格式: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://progresshub:your-password@localhost:5432/progresshub"

# Docker Compose Database Settings
POSTGRES_USER=progresshub
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=progresshub
POSTGRES_PORT=5432

# JWT Configuration (必填)
# 至少 32 字元的隨機字串
JWT_SECRET=your-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# Slack OAuth (選填)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Backend Port (Docker Compose)
BACKEND_PORT=3000
