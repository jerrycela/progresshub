# ProgressHub Environment Variables Configuration
# Copy this file to .env and fill in the values

# ========================================
# Required Environment Variables (P0)
# These MUST be set in production!
# ========================================

# Database Configuration
POSTGRES_USER=progresshub
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=progresshub
POSTGRES_PORT=5432

# Prisma Direct URL (for migrations, required for Supabase with PgBouncer)
# Local dev: same as DATABASE_URL
# Supabase: use direct connection (port 5432) instead of PgBouncer (port 6543)
DIRECT_URL=postgresql://progresshub:your_secure_password_here@localhost:5432/progresshub

# Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ========================================
# Optional Environment Variables
# ========================================

# Application Settings
NODE_ENV=development
BACKEND_PORT=3000
FRONTEND_PORT=8080

# JWT Expiration
JWT_EXPIRES_IN=7d

# CORS Configuration (comma-separated domains for production)
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Frontend
VITE_API_URL=http://localhost:3000/api

# Scheduler Configuration
REMINDER_TIME=17:00
REMINDER_TIMEZONE=Asia/Taipei

# ========================================
# GitLab Integration (Optional)
# ========================================

# API Base URL for OAuth callbacks
API_BASE_URL=https://your-api-domain.com

# Encryption key for storing GitLab tokens securely
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GITLAB_ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
